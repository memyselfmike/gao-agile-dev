{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Configuration",
  "description": "JSON Schema for GAO-Dev workflow configuration files",
  "type": "object",
  "required": ["name", "description", "phase"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique workflow identifier (kebab-case, e.g., 'prd', 'dev-story')"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable workflow description"
    },
    "phase": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "BMAD phase (1=Analysis, 2=Planning, 3=Solutioning, 4=Implementation)"
    },
    "author": {
      "type": "string",
      "description": "Author or responsible agent (e.g., 'John (Product Manager)')"
    },
    "non_interactive": {
      "type": "boolean",
      "description": "Whether workflow runs without user interaction",
      "default": false
    },
    "autonomous": {
      "type": "boolean",
      "description": "Whether workflow can run fully autonomously",
      "default": true
    },
    "iterative": {
      "type": "boolean",
      "description": "Whether workflow supports iterative refinement",
      "default": false
    },
    "web_bundle": {
      "type": "boolean",
      "description": "Whether workflow requires web/browser tools",
      "default": false
    },
    "variables": {
      "type": "object",
      "description": "Workflow variables with metadata",
      "additionalProperties": {
        "type": "object",
        "required": ["description", "type"],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["string", "integer", "number", "boolean", "array", "object"]
          },
          "required": {
            "type": "boolean",
            "default": false
          },
          "default": {
            "description": "Default value for the variable"
          }
        }
      }
    },
    "required_tools": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true,
      "description": "List of required tools for this workflow"
    },
    "output_file": {
      "type": "string",
      "description": "Expected output file path (may contain {{variable}} placeholders)"
    },
    "templates": {
      "type": "object",
      "description": "Template files used by this workflow",
      "properties": {
        "main": {
          "type": "string",
          "description": "Main template file"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "steps": {
      "type": "array",
      "description": "Workflow execution steps",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "conditional": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "success_criteria": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Success criteria for workflow completion"
    }
  },
  "additionalProperties": false
}
